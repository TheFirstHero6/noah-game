generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(cuid())
  clerkUserId String   @unique
  email       String   @unique
  name        String?
  imageUrl    String?
  theme       String   @default("royal-court")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  role        Role     @default(BASIC)
  resources   Resource?
  cities      City[]
  armies      Army[]
}

enum Role {
  BASIC
  ADMIN
}

model Resource {
  id        String   @id @default(cuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id])
  wood      Int      @default(0)
  stone     Int      @default(0)
  food      Int      @default(0)
  currency  Float    @default(0)
  metal     Int      @default(0)
  livestock Int      @default(0)
}

model City {
  id            String     @id @default(cuid())
  name          String
  ownerId       String
  owner         User       @relation(fields: [ownerId], references: [id])
  upgradeTier     Int        @default(1)
  localWealth   Float      @default(0)
  taxRate       Int        @default(5)
  buildings     Building[]
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}

model Building {
  id          String   @id @default(cuid())
  name        String
  rarity      String   // "Common" or "Rare"
  tier        Int      @default(1)  // Building tier (1-3)
  cityId      String
  city        City     @relation(fields: [cityId], references: [id])
  createdAt   DateTime @default(now())
}

model Army {
  id        String     @id @default(cuid())
  name      String
  ownerId   String
  owner     User       @relation(fields: [ownerId], references: [id])
  units     ArmyUnit[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model ArmyUnit {
  id        String   @id @default(cuid())
  armyId    String
  army      Army     @relation(fields: [armyId], references: [id])
  unitType  String
  quantity  Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}